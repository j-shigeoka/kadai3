<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_with model: @user do |f| %>
      <h6>Name</h6>
        <%= f.text_field :name %>
        
      <label for="inputImage">Image</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
        
      <h6>Introduction</h6>
        <%= f.text_area :introduction %>
          
        <%= f.submit 'Update User',class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>